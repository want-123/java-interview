<mapper namespace="com.mk.mapper.SysUserMapper">

    <!-- 用户分页列表 -->
    <select id="selectRolesByUserId" resultType="com.mk.entity.SysRole">
        SELECT r.*
        FROM sys_role r
                 JOIN sys_user_role ur ON r.role_id = ur.role_id
        WHERE ur.user_id = #{userId}
    </select>

